<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>
<p>This is a signup page for new users.</p>

<div class="row">
  <div class="new_user_form">
    <%= form_for(@user) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create my account", class: "send_to_create_user" %>
    <% end %>
  </div>
</div>
